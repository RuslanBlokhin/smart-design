<li class='faq__item'>
    <div class='faq__item-icon-wrapper'>
        <img src='{{icon}}' class='faq__item-icon' />
    </div>
    <h2 class='faq__item-title'>{{name}}</h2>
    <ul class='faq__faq-list'>
        {{#each questions}}
            <li class='faq__faq-item'>
                <button type='button' class='faq__faq-button btn'>
                    <div class='faq__faq-item-title'>{{this.question}}</div>
                    <div class='faq__faq-arrow'>
                        <svg class='arrowDownLogo' width='16' height='8' viewBox='0 0 16 8' fill='none'>
                            <path
                                d='M0.430571 0.51192C0.700138 0.197426 1.17361 0.161005 1.48811 0.430571L8.00001 6.01221L14.5119 0.430572C14.8264 0.161005 15.2999 0.197426 15.5695 0.511921C15.839 0.826415 15.8026 1.29989 15.4881 1.56946L8.48811 7.56946C8.20724 7.8102 7.79279 7.8102 7.51192 7.56946L0.51192 1.56946C0.197426 1.29989 0.161005 0.826414 0.430571 0.51192Z'
                                fill='#313131'
                            />
                        </svg>
                    </div>
                </button>
                <div class='faq__faq-answer' hidden>{{this.answer}}</div>
            </li>
        {{/each}}
    </ul>
</li>