<li class='glide__slide blog__articles-item'>
    <div class='blog__articles-image-wrapper'>
        <img class='blog__articles-image' src='{{url}}' alt='article' />
    </div>
    <div class='blog__articles-info'>
        <div class='blog__articles-date'>{{date}} - от автора</div>
        <div class='blog__articles-titte'>{{title}}</div>
        <div class='blog__articles-description'>{{description}}</div>
    </div>
    <button type='button' class='blog__articles-link-wrapper btn'>
        <div class='blog__articles-line'></div>
        <div class='blog__articles-link'>ЧИТАТЬ ДАЛЕЕ</div>
    </button>
</li>